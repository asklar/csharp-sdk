    <Application Id="QuickstartWeatherServer"
                 Executable="QuickstartWeatherServer\QuickstartWeatherServer.exe"
                  EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="QuickstartWeatherServer"
        Description="QuickstartWeatherServer"
        BackgroundColor="transparent"
        Square150x150Logo="Images\Square150x150Logo.png"

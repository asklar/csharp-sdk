    <Application Id="AspNetCoreSseServer"
       Executable="AspNetCoreSseServer\AspNetCoreSseServer.exe"
       EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="AspNetCoreSseServer"
        Description="AspNetCoreSseServer"
        BackgroundColor="transparent"
        Square150x150Logo="Images\Square150x150Logo.png"
